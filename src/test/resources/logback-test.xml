<configuration>

    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.jdbc" level="debug"/>
    <logger name="ru.javawebinar.topjava" level="debug"/>

    <root level="WARN">
        <appender-ref ref="console"/>
    </root>

    <appender name="testResults" class="ch.qos.logback.core.FileAppender">
        <file>${TOPJAVA_ROOT}/log/testResults.log</file>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%msg%n</pattern>
        </encoder>
        <param name="append" value="false" />
    </appender>

    <logger name="ru.javawebinar.topjava.service.AbstractPrintTotalResultsTest" level="debug" additivity="false">
        <appender-ref ref="testResults"/>
        <appender-ref ref="console"/>
    </logger>

</configuration>